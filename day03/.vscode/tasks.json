{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile",
            "command": "C:/mingw-w64/mingw32/bin/gcc.exe",
            "args": [
                "-g",
                "${fileDirname}\\**.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw-w64/mingw32/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": ".\\${fileBasenameNoExtension}.exe",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:/mingw-w64/mingw32/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw-w64/mingw32/bin"
            }
        }
    ],
    "version": "2.0.0"
}